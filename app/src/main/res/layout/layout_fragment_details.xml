<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/counterfeit_product_details"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/imgCounterfeitProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/laptop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvCounterfeitProductTitle"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCounterfeitProductCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textIsSelectable="true"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/productcode" />

                <TextView
                    android:id="@+id/tvCounterfeitProductControllerID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"

                    android:layout_marginTop="10dp"
                    android:text="@string/productcontroluid" />

                <TextView
                    android:id="@+id/tvCounterfeitProductPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_marginTop="10dp"
                    android:text="@string/vicinity" />

                <TextView
                    android:id="@+id/tvCounterfeitProductPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:autoLink="phone"
                    android:text="@string/phone_number" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/victim_of_counterfeit"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/imgCounterfeitVictim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                      />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvCounterfeitVictimName"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/victim_username" />

                <TextView
                    android:id="@+id/tvCounterfeitVictimPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:autoLink="phone"
                    android:text="@string/phone_number" />

                <TextView
                    android:id="@+id/tvCounterfeitVictimEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:autoLink="email"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/tvCounterfeitVictimPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/vicinity" />


                <TextView
                    android:id="@+id/tvCounterfeitVictimRegDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:text="@string/suspect_of_counterfeit"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/imgSuspectCounterfeit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                         />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvSuspectCounterfeitName"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/victim_username" />

                <TextView
                    android:id="@+id/tvSuspectCounterfeitPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autoLink="phone"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/phone_number" />

                <TextView
                    android:id="@+id/tvSuspectCounterfeitEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autoLink="email"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/tvSuspectCounterfeitPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_marginTop="10dp"
                    android:text="@string/vicinity" />

                <TextView
                    android:id="@+id/tvSuspectCounterfeitRegDate"
                    android:layout_width="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                     />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/alterations"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCounterfeitIsPhoneAltered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/isphonealtered" />

                <TextView
                    android:id="@+id/tvCounterfeitIsPlaceAltered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/isplacealtered" />

                <TextView
                    android:id="@+id/tvCounterfeitIsImageAltered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/isimagealtered" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/tvPhoneAlterationStatement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="phone"
                        android:padding="5dp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:text="@string/original_phone_new_phone" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/tvPlaceAlterationStatement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:text="@string/original_place_new_place" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/image_alterations"
                            style="@style/TextAppearance.Material3.TitleSmall"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="@string/original_image"
                            style="@style/TextAppearance.Material3.TitleSmall"
                            android:textStyle="italic" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="10dp">

                            <ImageView
                                android:id="@+id/imgCounterfeitOriginalImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="@string/new_image"
                            style="@style/TextAppearance.Material3.TitleSmall"
                            android:textStyle="italic" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="10dp">

                            <ImageView
                                android:id="@+id/imgCounterfeitNewImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>