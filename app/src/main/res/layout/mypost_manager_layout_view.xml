<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_foreground_material_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/material_seven"
            android:fontFamily="georgia"
            android:gravity="center"
            android:text="@string/my_posted_products"
            android:textColor="@color/abc_decor_view_status_guard"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyPostManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/my_post_data_view" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>