<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImgUser"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@color/black"
                app:civ_border_color="@color/ratingYellow"
                app:civ_border_width="1dp" />


            <TextView
                android:id="@+id/tvNameUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rajdhani_bold" />

            <TextView
                android:id="@+id/tvEmailUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:autoLink="email"
                android:fontFamily="@font/rajdhani_bold" />

            <TextView
                android:id="@+id/tvPhoneNumberUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:autoLink="phone"
                android:fontFamily="@font/rajdhani_bold" />

            <TextView
                android:id="@+id/tvUniversityUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rajdhani_bold" />

            <TextView
                android:id="@+id/tvUserCanPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rajdhani_bold" />

            <TextView
                android:id="@+id/tvUserSuspended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rajdhani_bold" />

            <TextView
                android:id="@+id/tvUserRegistrationDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/rajdhani_bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>